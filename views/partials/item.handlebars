<div class="container">
  <div class="row">
    {{#each products}}
      <div class="col-lg-4 col-md-6 d-flex">
        <div class="card">
          <img class="card-img-top img-responsive" src= {{imagePath}} alt="Card image cap">
          <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <p class="card-text">{{description}}</p>
            <hr/>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-primary">Go somewhere</a>
            <h4>${{price}}</h4>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>